<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ben.sample.myfirstapp" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowMessageAcitivity"
            android:label="@string/title_activity_show_message_acitivity"
            android:parentActivityName="com.ben.sample.myfirstapp.MyActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ben.sample.myfirstapp.MyActivity" />
        </activity>
    </application>

</manifest>
